    list <term> GetPatchCategoryItems () {
	list <term> items = maplist (string id, string localized, patch_categories, {
	    return `item (`id (id), localized);
	});

	items =  sort (term x, term y, items, {
	    return (x[1]:"" < y[1]:"");
	});

	return prepend (items, `item (`id ("all"), _("All")));
    }

