/**
 * File:
 *   smt_cron.scr
 * Summary:
 *   SCR Agent for reading/writing /etc/cron.d/yast2-smt
 *   using the any-agent
 * Access:
 *   read/write
 * Authors:
 *   Lukas Ocilka <locilka@suse.cz>
 *
 * $Id:$
 *
 * Read/Sets the values defined in /etc/cron.d/yast2-smt
 */
.smt_cron

`ag_anyagent (
    `Description (
	(`File ("/etc/smt.d/smt-cron")),	// read this file`
	"#\n",					// comments
	false,					// read/write
	(`List (
	    `Tuple (
		`minute (`String ("^ \t")),
		`Whitespace(),
		`hour (`String ("^ \t")),
		`Whitespace(),
		`day_of_month (`String ("^ \t")),
		`Whitespace(),
		`month (`String ("^ \t")),
		`Whitespace(),
		`day_of_week (`String ("^ \t")),
		`Whitespace(),
		`user (`String ("^ \t")),
		`Whitespace(),
		`command (`String ("^\n"))
	    ),
	    "\n"
	))
    )
)